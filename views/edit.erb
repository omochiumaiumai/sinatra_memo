<link rel="stylesheet" href="/css/edit.css">

<form method="post" action="/memo/<%= @memo[0] %>">
  <input type="text" name="title" value="<%= @memo[1] %>" autocomplete="off">
  <br>
  <textarea name="text" rows="10" cols="80"><%= @memo[2] %></textarea>
  <div class="save">
    <button type="submit">保存</button>
    <input name="_method" type="hidden" value="PATCH">
  </div>
</form>

<div class="back">
  <button onclick="location.href = '/memo/<%= @memo[0] %>' ">キャンセル</button>
  <br>
</div>
